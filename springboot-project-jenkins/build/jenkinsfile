pipeline{
    agent {
        lable 'jenkins-agent'
    }

    stages {
        stage("AppCode Checkout") {
            steps {
                git branch: 'java', url: 'https://github.com/anujsankdecha/Jenkins.git'
            }
        }
        stage ("Build Image") {
            steps {
                sh 'docker build -t javaapp:latest .'
            }
        }
        stage ('spinn Container') {
            steps {
                sh "docker compose up -d "
            }
        }
    }
}    
